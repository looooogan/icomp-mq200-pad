<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/OverallSituationLinerLayoutStyle">

    <TextView
        android:text="@string/C01S023"
        style="@style/FunctionalTitleTextViewStyle" />

    <LinearLayout style="@style/MiddleLinerLayoutStyle">

        <TextView
            android:text="@string/singleProductCode"
            style="@style/TextLeftAndBottom" />

        <TextView
            android:id="@+id/tv_01"
            style="@style/MiddleTestViewStyle" />

        <TextView
            android:text="@string/grindingTimes"
            style="@style/TextLeftAndBottom" />

        <EditText
            android:id="@+id/et_01"
            android:maxLength="6"
            android:inputType="number"
            android:digits="@string/onlyAllowInputNumbers"
            style="@style/MiddleEditTextStyle" />

        <TextView
            android:text="@string/averageProcessingCapacity"
            style="@style/TextLeftAndBottom" />

        <LinearLayout
            android:id="@+id/ll_01"
            style="@style/SpinnerLinerLayoutStyle">

            <TextView
                android:id="@+id/tv_02"
                style="@style/SpinnerViewStyle" />

            <ImageView
                android:src="@drawable/spinnerdropdown"
                style="@style/SpinnerImageViewStyle" />

        </LinearLayout>

        <View style="@style/View_1" />

        <Button
            android:id="@+id/btnScan"
            android:text="@string/scan"
            style="@style/OneButtonStyle" />

        <View style="@style/View_1" />

    </LinearLayout>

    <LinearLayout style="@style/BottomLinerLayoutStyle">

        <Button
            android:text="@string/cancel"
            android:onClick="btnCancel"
            style="@style/BottomButtonStyle" />

        <View style="@style/BottomLittlePartingLineStyle" />

        <Button
            android:text="@string/returnBy"
            android:onClick="btnReturn"
            style="@style/BottomButtonStyle" />

    </LinearLayout>

</LinearLayout>