<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/C01S101"
        android:textSize="25sp"
        android:textColor="@color/textColor"
        android:background="@color/baseColor"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/tv_01"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:text="当前扫描的标签已全部\n清空完毕"
            android:textSize="25sp"
            android:textColor="@color/baseColor"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_continue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="继续"
                android:textSize="25sp"
                android:textColor="@color/baseColor"
                android:background="@drawable/x_selectshape3"
                android:onClick="appContinue"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_complete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="完成"
                android:textSize="25dp"
                android:textColor="@color/baseColor"
                android:background="@drawable/x_selectshape3"
                android:onClick="appComplete"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_return"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:text="返回"
        android:textSize="25sp"
        android:textColor="@color/textColor"
        android:background="@drawable/x_selectshape2"
        android:gravity="center"
        android:onClick="appReturn"
        />
</LinearLayout>