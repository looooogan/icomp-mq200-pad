<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_c01s001_003"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.icomp.Iswtmv10.v01c01.c01s001.c01s001_003Activity">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/text_title_size"
        android:text="@string/C01S001"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@color/baseColor"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">
        <!--<TextView-->
            <!--android:id="@+id/tvNumber"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="E3000"-->
            <!--android:layout_marginTop="100dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:textColor="@color/baseColor"-->
            <!--android:textSize="35sp"/>-->
        <TextView
            android:id="@+id/tvMuch"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成功入库"
            android:layout_marginTop="20dp"
            android:textColor="@color/baseColor"
            android:textSize="35sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:layout_alignParentBottom="true"
        android:background="@color/baseColor">
        <Button
            android:id="@+id/btnGoOn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_bottom_size"
            android:text="@string/keepOn"
            android:textColor="@android:color/white"
            android:background="@color/baseColor"/>
        <View style="@style/BottomLittlePartingLineStyle" />
        <Button
            android:id="@+id/btnComplete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/complete"
            android:textSize="@dimen/text_bottom_size"
            android:textColor="@android:color/white"
            android:background="@color/baseColor"/>


    </LinearLayout>
</LinearLayout>
