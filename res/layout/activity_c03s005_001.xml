<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/OverallSituationLinerLayoutStyle">

    <TextView
        android:text="@string/c03s000_000_002"
        style="@style/FunctionalTitleTextViewStyle" />

    <LinearLayout style="@style/MiddleLinerLayoutStyle">

        <TextView
            android:text="@string/c03s005_001_001"
            android:layout_weight="2.5"
            style="@style/MiddleTextPromptStule" />

        <EditText
            android:id="@+id/et_01"
            android:hint="@string/c03s005_001_001"
            android:maxLength="6"
            android:inputType="number"
            android:digits="@string/onlyAllowInputNumbers"
            style="@style/MiddleEditTextStyle" />

        <View style="@style/View_1" />

        <Button
            android:id="@+id/btnSearch"
            android:text="@string/search"
            style="@style/OneButtonStyle" />

        <View style="@style/View_1" />

    </LinearLayout>

    <LinearLayout style="@style/BottomLinerLayoutStyle">

        <Button
            android:text="@string/cancel"
            android:onClick="btnCancel"
            style="@style/BottomButtonStyle" />

        <View style="@style/BottomLittlePartingLineStyle" />

        <Button
            android:text="@string/returnBy"
            android:onClick="btnReturn"
            style="@style/BottomButtonStyle" />

    </LinearLayout>

</LinearLayout>