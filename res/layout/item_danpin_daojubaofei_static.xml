<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/table_height"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@drawable/table_border_c"
        android:layout_width="0dp"
        android:layout_height="@dimen/table_height"
        android:layout_weight="0.9"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/tvCailiao"
            android:layout_width="0dp"
            android:layout_height="@dimen/table_height"
            android:layout_weight="1"
            android:textSize="@dimen/table_textsize"
            android:background="@null"
            android:layout_gravity="center"
            android:textColor="@color/baseColor"
            android:gravity="center"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/table_height"
            android:background="@color/baseColor"/>
        <TextView
            android:id="@+id/tvBaofeishuliangzu"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/table_height"
            android:layout_weight="1"
            android:textColor="@color/baseColor"
            android:text="1"
            android:textSize="@dimen/table_textsize"
            android:gravity="center"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/table_height"
            android:background="@color/baseColor"/>
        <TextView
            android:id="@+id/tvBaofeishuliang"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/table_height"
            android:layout_weight="1"
            android:visibility="gone"
            android:textSize="@dimen/table_textsize"
            android:textColor="@color/baseColor"
            android:text=""
            android:background="@null"
            android:gravity="center"/>
    </LinearLayout>
    </LinearLayout>