<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/table_height"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/ivRemove"
        android:layout_width="0dp"
        android:layout_height="@dimen/table_height"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:src="@drawable/cancel"
        android:padding="5sp" />

    <LinearLayout
        android:background="@drawable/table_border_c"
        android:layout_width="0dp"
        android:layout_height="@dimen/table_height"
        android:layout_weight="0.9"
        android:orientation="horizontal"
        android:layout_marginRight="10dp">
        <EditText
            android:id="@+id/etCailiao"
            android:layout_width="0dp"
            android:layout_height="@dimen/table_height"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="15sp"
            android:singleLine="true"
            android:layout_gravity="center"
            android:textColor="@color/baseColor"
            android:gravity="center"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/table_height"
            android:background="@color/baseColor"/>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvHuoWei"
            android:layout_width="0dp"
            android:layout_height="@dimen/table_height"
            android:layout_weight="1"
            android:textColor="@color/baseColor"
            android:text=""
            android:textSize="15sp"
            android:gravity="center"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/table_height"
            android:background="@color/baseColor"/>
        <TextView
            android:id="@+id/tvShenqing"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/baseColor"
            android:text=""
            android:textSize="15sp"
            android:gravity="center"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/table_height"
            android:background="@color/baseColor"/>
        <TextView
            android:id="@+id/tvKuCun"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/table_height"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/baseColor"
            android:text=""
            android:gravity="center"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/table_height"
            android:background="@color/baseColor"/>
        <TextView
            android:id="@+id/tvChukushuliang"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/table_height"
            android:layout_weight="1"
            android:textColor="@color/baseColor"
            android:text=""
            android:textSize="15sp"
            android:gravity="center"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/table_height"
            android:background="@color/baseColor"/>
        <TextView
            android:id="@+id/tvId"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/table_height"
            android:layout_weight="1"
            android:textColor="@color/baseColor"
            android:text=""
            android:textSize="15sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvToolType"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/table_height"
            android:layout_weight="1"
            android:textColor="@color/baseColor"
            android:text=""
            android:textSize="15sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvRfidCode"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/table_height"
            android:layout_weight="1"
            android:textColor="@color/baseColor"
            android:text=""
            android:textSize="15sp"
            android:gravity="center"/>

    </LinearLayout>
    </LinearLayout>