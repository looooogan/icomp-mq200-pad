<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout style="@style/laouthead">

        <TextView
            style="@style/title"
            android:background="@color/baseColor"
            android:text="@string/V01C01"
            android:textColor="@color/textColor"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="@color/textColor" />
    </RelativeLayout>
    <!--<RelativeLayout style="@style/laoutbody" >-->
    <android.support.v4.view.ViewPager
        android:id="@+id/ScrollLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:listSelector="@drawable/x_selectshape3" />
    <!--</RelativeLayout>-->
    <RelativeLayout
        style="@style/laoutfoot"
        android:background="@color/baseColor">

        <Button
            android:id="@+id/btn_return"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/x_selectshape2"
            android:gravity="center"
            android:text="@string/btnReturn"
            android:textColor="@color/textColor"
            android:textSize="25sp" />
    </RelativeLayout>

</LinearLayout>