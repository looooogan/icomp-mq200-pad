<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_c01s001_002"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.icomp.Iswtmv10.v01c01.c01s001.c01s001_002Activity">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/text_title_size"
        android:text="@string/C01S001"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@color/baseColor"/>
    <LinearLayout
        android:layout_below="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/materialNumber"
                android:textColor="@color/baseColor"
                android:textSize="@dimen/text_content_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:background="@drawable/border_c"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="10"
                    android:textSize="@dimen/text_edittext"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:background="@drawable/border_c"
                    />
            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/baseColor"
                android:textSize="@dimen/text_content_size"
                android:gravity="center"
                android:text="@string/orderNumber"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:background="@drawable/border_c"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvXiaLa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="10"
                    android:textSize="@dimen/text_edittext"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:background="@drawable/border_c"
                    />
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/baseColor"
                android:textSize="@dimen/text_content_size"
                android:gravity="center"
                android:text="@string/orderNumber1"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:background="@drawable/border_c"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvDingDanXuHao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="10"
                    android:textSize="@dimen/text_edittext"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:background="@drawable/border_c"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/baseColor"
                android:textSize="@dimen/text_content_size"
                android:gravity="center"
                android:text="@string/batch"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:background="@drawable/border_c"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_edittext"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:background="@drawable/border_c"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="评估类型"
                android:textColor="@color/baseColor"
                android:textSize="@dimen/text_content_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/border_c">

                <TextView
                    android:id="@+id/tvPingGuLeiXing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_c"
                    android:gravity="center_vertical"
                    android:maxLength="10"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/text_edittext" />
            </LinearLayout>

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/baseColor"
                android:textSize="15sp"
                android:gravity="center"
                android:text="最大入库库数量"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:background="@drawable/border_c"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvMaxSize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="10"
                    android:textSize="@dimen/text_edittext"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:background="@drawable/border_c"
                    />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tvMuchStatic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="请输入E3000入库数量"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/baseColor" />
        <LinearLayout
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:background="@drawable/border_c"
            android:layout_height="0dp"
            android:layout_weight="1">
            <EditText
                android:id="@+id/etMuch"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="6"
                android:inputType="number"
                android:textSize="@dimen/text_edittext"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@drawable/border_c"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btnReturn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/returnBy"
            android:textSize="@dimen/text_bottom_size"
            android:textColor="@android:color/white"
            android:background="@color/baseColor"/>
        <View style="@style/BottomLittlePartingLineStyle" />
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/confirm"
            android:textSize="@dimen/text_bottom_size"
            android:textColor="@android:color/white"
            android:background="@color/baseColor"/>


    </LinearLayout>
</LinearLayout>
