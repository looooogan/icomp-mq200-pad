<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/OverallSituationLinerLayoutStyle">

    <TextView
        android:text="@string/C02S001"
        style="@style/FunctionalTitleTextViewStyle" />

    <LinearLayout style="@style/MiddleLinerLayoutStyle">

        <TextView
            android:text="@string/c02s001_001_001"
            android:layout_weight="2.5"
            style="@style/MiddleTextPromptStule" />

        <SeekBar
            android:id="@+id/seekBar1"
            style="@style/seekBar" />

        <View style="@style/View_1" />

        <Button
            android:id="@+id/btnSave"
            android:text="@string/save"
            style="@style/OneButtonStyle" />

        <View style="@style/View_1" />

    </LinearLayout>

    <LinearLayout style="@style/BottomLinerLayoutStyle">

        <Button
            android:id="@+id/btnCancel"
            android:text="@string/cancel"
            android:onClick="btnCancel"
            style="@style/BottomButtonStyle" />

        <View style="@style/BottomLittlePartingLineStyle" />

        <Button
            android:id="@+id/btnReturn"
            android:text="@string/returnBy"
            android:onClick="btnReturn"
            style="@style/BottomButtonStyle" />

    </LinearLayout>

</LinearLayout>