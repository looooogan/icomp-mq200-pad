<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!-- solid 设置填充颜色 -->
    <solid
        android:color="@color/baseColor"/>
    <!-- corners 设置长方形按钮边框四角弧度 -->
    <corners android:radius="1dp" />
    <!-- stroke 设置边框属性 -->
    <stroke
        android:width="1dp"
        android:color="@color/baseColor" >
    </stroke>
</shape>