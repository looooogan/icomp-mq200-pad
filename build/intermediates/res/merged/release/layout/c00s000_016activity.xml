<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <RelativeLayout style="@style/laouthead.bg">

             <TextView
                 android:id="@+id/c00s000"
                 style="@style/title"
                 android:text="@string/login"
                 />

    </RelativeLayout>
    <RelativeLayout style="@style/laoutbody" >

        <Button
            android:id="@+id/btnCardLogin"
            style="@style/centerButton"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignBaseline="@+id/btnInputLogin"
            android:layout_alignBottom="@+id/btnInputLogin"
            android:layout_alignParentRight="true"
            android:layout_marginRight="53dp"
            android:background="@drawable/x_selectshape3"
            android:text="@string/scancard"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnInputLogin"
            style="@style/centerButton"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="53dp"
            android:layout_marginTop="80dp"
            android:layout_toLeftOf="@+id/btnCardLogin"
            android:background="@drawable/x_selectshape3"
            android:text="@string/input"
            android:textSize="20sp" />

    </RelativeLayout>
    

</LinearLayout>