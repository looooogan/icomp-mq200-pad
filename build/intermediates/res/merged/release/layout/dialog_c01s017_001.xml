<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseColor">

    <TextView
        android:id="@+id/tvmaterialNumber"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="start|center"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/tvreturnedQuantity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="start|center"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textColor="@color/textColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center"
            android:text="@string/actualReturnedQuantity"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etactualReturnedQuantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_no_radius"
            android:inputType="number"
            android:digits="@string/onlyAllowInputNumbers"
            android:maxLength="5"
            android:paddingLeft="15dp"
            android:textColor="@color/baseColor"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        style="@style/MiddleTwoButtonLinerLayoutStyle">

        <Button
            android:id="@+id/btnCancel"
            android:text="@string/cancel"
            style="@style/TwoButtonStyle" />

        <Button
            android:id="@+id/btnConfirm"
            android:text="@string/confirm"
            style="@style/TwoButtonStyle" />

    </LinearLayout>

</LinearLayout>