<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/OverallSituationLinerLayoutStyle">

    <TextView
        android:text="@string/c03s000_001_003"
        style="@style/FunctionalTitleTextViewStyle" />

    <LinearLayout style="@style/MiddleLinerLayoutStyle">

        <TextView
            android:text="@string/c03s006_001_001"
            android:layout_weight="3"
            style="@style/MiddleTextPromptStule" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/border_no_radius"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:textColor="@color/baseColor"
                android:hint="@string/c03s006_001_002"
                android:digits="@string/allowInput"
                android:maxLength="10" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/baseColor" />

            <EditText
                android:id="@+id/et_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/border_no_radius"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                android:textColor="@color/baseColor"
                android:hint="@string/singleProductCode"
                android:digits="@string/allowInput"
                android:maxLength="15" />

        </LinearLayout>

        <View style="@style/View_1" />

        <LinearLayout style="@style/MiddleTwoButtonLinerLayoutStyle">

            <Button
                android:id="@+id/btnScan"
                android:text="@string/scan"
                style="@style/TwoButtonStyle" />

            <Button
                android:id="@+id/btnSearch"
                android:text="@string/search"
                style="@style/TwoButtonStyle" />

        </LinearLayout>

        <View style="@style/View_1" />

    </LinearLayout>

    <LinearLayout style="@style/BottomLinerLayoutStyle">

        <Button
            android:text="@string/cancel"
            android:onClick="btnCancel"
            style="@style/BottomButtonStyle" />

        <View style="@style/BottomLittlePartingLineStyle" />

        <Button
            android:text="@string/returnBy"
            android:onClick="btnReturn"
            style="@style/BottomButtonStyle" />

    </LinearLayout>

</LinearLayout>