<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/iv_01"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/cancel"
        android:padding="3dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tvmaterialNumber"
        style="@style/TableRowTextViewStyle" />

    <TextView
        android:id="@+id/tvgrindingQuantity"
        style="@style/TableRowTextViewStyle" />

    <TextView
        android:id="@+id/tvtoolIDs"
        android:visibility="gone"
        style="@style/TableRowTextViewStyle" />

    <TextView
        android:id="@+id/tvtoolTypes"
        android:visibility="gone"
        style="@style/TableRowTextViewStyle" />

    <TextView
        android:id="@+id/tvrfidContainerIDs"
        android:visibility="gone"
        style="@style/TableRowTextViewStyle" />

    <TextView
        android:id="@+id/tvauthorizationFlgs"
        android:visibility="gone"
        style="@style/TableRowTextViewStyle" />

</LinearLayout>