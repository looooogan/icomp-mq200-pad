<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/x_selectshape2"
        android:gravity="center"
        android:text="卸下合成刀"
        android:textColor="@color/textColor"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:text="对应工序"
            android:textColor="@color/baseColor"
            android:textSize="@dimen/daoju_all" />

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="@drawable/border_hint"
            android:gravity="center_vertical"
            android:textColor="@color/textviewcolor"
            android:textSize="@dimen/daoju_all" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:text="对应设备"
            android:textColor="@color/baseColor"
            android:textSize="@dimen/daoju_all" />

        <TextView
            android:id="@+id/tv_02"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="@drawable/border_hint"
            android:gravity="center_vertical"
            android:textColor="@color/textviewcolor"
            android:textSize="@dimen/daoju_all" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:text="卸下原因"
            android:textColor="@color/baseColor"
            android:textSize="@dimen/daoju_all" />

        <LinearLayout
            android:id="@+id/ll_011"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="@drawable/border"
            android:clickable="true"
            android:onClick="dropdown"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_011"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/daoju_all"
                android:textColor="@color/baseColor"
                android:gravity="center_vertical" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:text="零部件种类"
            android:textColor="@color/baseColor"
            android:textSize="@dimen/daoju_all" />

        <LinearLayout
            android:id="@+id/ll_0111"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="@drawable/border"
            android:clickable="true"
            android:onClick="dropdown1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_0111"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/daoju_all"
                android:textColor="@color/baseColor"
                android:gravity="center_vertical" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:text="加工量"
            android:textColor="@color/baseColor"
            android:textSize="@dimen/daoju_all" />

        <EditText
            android:id="@+id/et_01"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="@drawable/border"
            android:inputType="number"
            android:maxLength="6"
            android:numeric="integer"
            android:singleLine="true"
            android:textColor="@color/baseColor"
            android:textSize="@dimen/daoju_all" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:background="@drawable/x_selectshape2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/x_selectshape2"
            android:onClick="appConfirm"
            android:text="@string/next"
            android:textColor="@color/textColor"
            android:textSize="25sp" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/textColor" />

        <Button
            android:id="@+id/btn_return"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/x_selectshape2"
            android:text="返回"
            android:onClick="cancel"
            android:textColor="@color/textColor"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>