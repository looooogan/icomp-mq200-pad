<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/OverallSituationLinerLayoutStyle">

    <TextView
        android:text="@string/c03s000_002_001"
        style="@style/FunctionalTitleTextViewStyle" />

    <LinearLayout style="@style/MiddleLinerLayoutStyle">

        <TextView
            android:text="@string/c03s003_001_001"
            android:layout_weight="2"
            style="@style/MiddleTextPromptStule" />

        <TextView
            android:text="@string/assemblyLine"
            style="@style/TextLeftAndBottom" />

        <LinearLayout
            android:id="@+id/ll_01"
            style="@style/SpinnerLinerLayoutStyle">

            <TextView
                android:id="@+id/tv_01"
                style="@style/SpinnerViewStyle" />

            <ImageView
                android:src="@drawable/spinnerdropdown"
                style="@style/SpinnerImageViewStyle" />

        </LinearLayout>

        <TextView
            android:text="@string/deviceName"
            style="@style/TextLeftAndBottom" />

        <LinearLayout
            android:id="@+id/ll_02"
            style="@style/SpinnerLinerLayoutStyle">

            <TextView
                android:id="@+id/tv_02"
                style="@style/SpinnerViewStyle" />

            <ImageView
                android:src="@drawable/spinnerdropdown"
                style="@style/SpinnerImageViewStyle" />

        </LinearLayout>

        <View style="@style/View_1" />

        <Button
            android:id="@+id/btnScan"
            android:text="@string/scan"
            style="@style/OneButtonStyle" />

        <View
            android:layout_weight="1.5"
            style="@style/View_1" />

    </LinearLayout>

    <LinearLayout style="@style/BottomLinerLayoutStyle">

        <Button
            android:text="@string/cancel"
            android:onClick="btnCancel"
            style="@style/BottomButtonStyle" />

        <View style="@style/BottomLittlePartingLineStyle" />

        <Button
            android:text="@string/returnBy"
            android:onClick="btnReturn"
            style="@style/BottomButtonStyle" />

    </LinearLayout>

</LinearLayout>