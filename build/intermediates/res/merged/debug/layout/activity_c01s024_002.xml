<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/OverallSituationLinerLayoutStyle">

    <TextView
        android:text="@string/C01S024"
        style="@style/FunctionalTitleTextViewStyle" />

    <LinearLayout style="@style/MiddleLinerLayoutStyle">

        <ListView
            android:id="@+id/lv_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_no_radius"
            android:divider="@color/baseColor"
            android:dividerHeight="0.5dp"
            android:scrollbars="none" />

    </LinearLayout>

    <LinearLayout style="@style/BottomLinerLayoutStyle">

        <Button
            android:text="@string/keepOn"
            android:onClick="btnKeepOn"
            style="@style/BottomButtonStyle" />

        <View style="@style/BottomLittlePartingLineStyle" />

        <Button
            android:text="@string/complete"
            android:onClick="btnComplete"
            style="@style/BottomButtonStyle" />

    </LinearLayout>

</LinearLayout>