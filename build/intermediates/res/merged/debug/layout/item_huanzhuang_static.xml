<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/table_height"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@drawable/table_border_c"
        android:layout_width="0dp"
        android:layout_height="@dimen/table_height"
        android:layout_weight="0.9"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvCailiao"
            android:layout_width="0dp"
            android:layout_height="@dimen/table_height"
            android:layout_weight="1"
            android:background="@null"
            android:layout_gravity="center"
            android:textColor="@color/baseColor"
            android:gravity="center"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/table_height"
            android:background="@color/baseColor"/>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvDaoJuType"
            android:layout_width="0dp"
            android:layout_height="@dimen/table_height"
            android:layout_weight="1"
            android:textColor="@color/baseColor"
            android:text=""
            android:gravity="center"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/table_height"
            android:background="@color/baseColor"/>
        <TextView
            android:id="@+id/tvDaoJuNum"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/baseColor"
            android:text=""
            android:gravity="center"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/table_height"
            android:background="@color/baseColor"/>
        <TextView
            android:background="@null"
            android:id="@+id/tvHuanzhuangNum"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/table_height"
            android:layout_weight="1"

            android:textColor="@color/baseColor"
            android:gravity="center"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/table_height"
            android:background="@color/baseColor"/>
        <TextView
            android:id="@+id/tvDiuDaoNum"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/table_height"
            android:layout_weight="1"
            android:textColor="@color/baseColor"
            android:inputType="number"
            android:gravity="center"
            android:background="@null"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/table_height"
            android:background="@color/baseColor"/>

    </LinearLayout>
    </LinearLayout>