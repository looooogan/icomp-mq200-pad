<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_c01_s005_002_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.icomp.Iswtmv10.v01c01.c01s005.C01S005_002_add">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/text_title_size"
        android:text="@string/toolDelete"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@color/baseColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择报废刀具所在位置"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/baseColor"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/tvBeiYong"
            android:text="备用刀"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:textColor="@color/baseColor"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/btn_border_c4"/>
        <TextView
            android:id="@+id/tvDaiRenMo"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="待修磨（厂内）"
            android:textColor="@color/baseColor"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/btn_border_c4"/>
        <TextView
            android:id="@+id/tvDaiChuChang"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="待修磨（厂外）"
            android:textColor="@color/baseColor"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/btn_border_c4"/>

        <TextView
            android:id="@+id/tvChangwai"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="厂外修磨"
            android:textColor="@color/baseColor"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/btn_border_c4"/>

        <TextView
            android:id="@+id/tvShengchanxian"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="生产线"
            android:textColor="@color/baseColor"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/btn_border_c4"
            android:visibility="gone" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:layout_alignParentBottom="true"
        android:background="@color/baseColor">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textSize="@dimen/text_bottom_size"
            android:textColor="@android:color/white"
            android:background="@color/baseColor"/>
        <View style="@style/BottomLittlePartingLineStyle" />
        <Button
            android:id="@+id/btnReturn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/returnBy"
            android:textSize="@dimen/text_bottom_size"
            android:textColor="@android:color/white"
            android:background="@color/baseColor"/>
    </LinearLayout>
</LinearLayout>
