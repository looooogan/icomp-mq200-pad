<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/OverallSituationLinerLayoutStyle">

    <TextView
        android:text="@string/c03s000_001_002"
        style="@style/FunctionalTitleTextViewStyle" />

    <LinearLayout style="@style/MiddleLinerLayoutStyle">

        <TextView
            android:text="@string/materialNumber"
            style="@style/TextLeftAndBottom" />

        <TextView
            android:id="@+id/tv_01"
            style="@style/MiddleTestViewStyle" />

        <TextView
            android:text="@string/toolType"
            style="@style/TextLeftAndBottom" />

        <TextView
            android:id="@+id/tv_02"
            style="@style/MiddleTestViewStyle" />

        <TextView
            android:text="@string/libraryCode"
            style="@style/TextLeftAndBottom" />

        <TextView
            android:id="@+id/tv_03"
            style="@style/MiddleTestViewStyle" />

        <Button
            android:id="@+id/btnScan"
            android:text="@string/scan"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            style="@style/OneButtonStyle" />

    </LinearLayout>

    <LinearLayout style="@style/BottomLinerLayoutStyle">

        <Button
            android:text="@string/cancel"
            android:onClick="btnCancel"
            style="@style/BottomButtonStyle" />

        <View style="@style/BottomLittlePartingLineStyle" />

        <Button
            android:text="@string/returnBy"
            android:onClick="btnReturn"
            style="@style/BottomButtonStyle" />

    </LinearLayout>

</LinearLayout>